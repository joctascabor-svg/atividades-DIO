from reportlab.lib.pagesizes import landscape, inch
from reportlab.lib import colors
from reportlab.lib.styles import getSampleStyleSheet, ParagraphStyle
from reportlab.platypus import SimpleDocTemplate, Paragraph, Spacer, Table, TableStyle, Image, PageBreak
from reportlab.pdfbase import pdfmetrics
from reportlab.pdfbase.cidfonts import UnicodeCIDFont

# Registrar fonte compat√≠vel
pdfmetrics.registerFont(UnicodeCIDFont("HeiseiMin-W3"))

# Caminho do arquivo de sa√≠da
output_path = "/mnt/data/O_Codigo_da_Harmonia_Joao_Borges.pdf"

# Formato e-book (16:9)
page_width = 11 * inch
page_height = 6.1875 * inch
doc = SimpleDocTemplate(output_path, pagesize=(page_width, page_height), title="O C√≥digo da Harmonia")

styles = getSampleStyleSheet()
styles.add(ParagraphStyle(name="Titulo", fontName="HeiseiMin-W3", fontSize=24, leading=28, alignment=1, textColor=colors.HexColor("#D4AF37")))
styles.add(ParagraphStyle(name="Subtitulo", fontName="HeiseiMin-W3", fontSize=16, leading=20, alignment=1))
styles.add(ParagraphStyle(name="Corpo", fontName="HeiseiMin-W3", fontSize=12, leading=16, alignment=4))
styles.add(ParagraphStyle(name="Tabela", fontName="HeiseiMin-W3", fontSize=10, leading=14, alignment=1))

# Caminho da capa
cover_image = "/mnt/data/806cd35b-7b70-409a-a4e5-1b5a1133cfa3.png"

content = []

# Reduzir o tamanho da capa para caber corretamente
content.append(Image(cover_image, width=page_width * 0.9, height=page_height * 0.9))
content.append(PageBreak())

# Conte√∫do principal
content.append(Paragraph("üéµ O C√ìDIGO DA HARMONIA: DESVENDE O CAMPO HARM√îNICO", styles["Titulo"]))
content.append(Spacer(1, 12))
content.append(Paragraph("Autor: Jo√£o Borges", styles["Subtitulo"]))
content.append(Spacer(1, 20))
content.append(Paragraph("A m√∫sica √© uma linguagem ‚Äî e como toda linguagem, tem suas regras, estrutura e l√≥gica interna. "
                         "O campo harm√¥nico √© uma das chaves mais importantes para compreender essa l√≥gica. "
                         "Ele explica por que certos acordes combinam entre si e como criar progress√µes musicais agrad√°veis.",
                         styles["Corpo"]))
content.append(PageBreak())

# Tabela do campo harm√¥nico maior
data = [
    ["Grau", "Acorde", "Tipo"],
    ["I", "C", "Maior"],
    ["II", "Dm", "Menor"],
    ["III", "Em", "Menor"],
